<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>
            <div class="index-container">
                    <table>
                        <thead>
                                <tr class ="index-topics">
                                    <th>Song</th>
                                    <th>Artist</th>
                                    <th>Genre</th>
                                    <th>Comments:
                                </tr>
                        </thead>
                        <tbody id="index-options">
                            <% songs.forEach(s => { %>
                            <tr>
                                <td id="song-titles">
                                    <img class="song-cover" src="<%=s.image%>"/>
                                    <div><%= s.song %></div>
                                </td>
                                <td>
                                    <%= s.artist %>
                                </td>
                                <td>
                                    <%= s.genre %>
                                </td>
                                <td>
                                    <a id="button-comment" href = "/songs/<%= s._id %>"><button> Comment</button></a>
                                </td>
                            </tr>
                            <% }); %>
                            
                        </tbody>
                    </table>
            </div>
        <%- include('../partials/footer') %>
</body>
</html>